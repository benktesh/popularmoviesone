<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context="com.benktesh.popularmovies.DetailedActivity">

    <TextView
        android:text="Original title"
        android:id="@+id/tv_original_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding"

        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView android:id="@+id/iv_movie_poster"
            android:layout_width="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/movie_poster_content"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding"
            android:gravity="bottom"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_user_rating_label"
                android:text="@string/user_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />
            <RatingBar
                android:id="@+id/rbv_user_rating"
                android:text="User Rating"
                android:numStars="10"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding"/>

            <TextView
                android:id="@+id/tv_release_label"
                android:text="@string/release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_release_date"
                android:text="Release Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding"/>

        </LinearLayout>




    </LinearLayout>
    <TextView
        android:id="@+id/tv_synopsis_label"
        android:text="@string/synopsis_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingTop="@dimen/padding"
        />

    <TextView
        android:id="@+id/tv_synopsis"
        android:text="A plot synopsis (called overview in the api)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"/>


</LinearLayout>
</ScrollView>
